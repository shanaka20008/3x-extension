{
    "manifest_version": 3,
    "name": "3x Video Speed",
    "version": "1.0",
    "description": "Play videos at 3x speed on any website.",
    "icons": {
      "48": "icon.png"
    },
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }
  